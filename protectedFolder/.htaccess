# 禁止直接访问此目录中的文件
# 只允许通过 PHP include/require 访问

# Apache 2.4+
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Apache 2.2
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# 防止目录列表
Options -Indexes

# 禁止访问特定文件类型
<FilesMatch "\.(cdb|db|sqlite|json|log|lock|tmp|backup|md)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>
